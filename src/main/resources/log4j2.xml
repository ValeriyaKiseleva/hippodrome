<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="fatal" name="MyApp" packages="">
    <Appenders>
        <RollingFile name="RollingFile" fileName="log/hippodrome.log"
                     filePattern="log/hippodrome.%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d %p %c{1.}: %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="log" maxDepth="2">
                    <IfFileName glob="log/hippodrome.*.log" />
                    <IfLastModified age="P7D" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>